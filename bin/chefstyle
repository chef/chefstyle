#!/usr/bin/env ruby
# -*- encoding: utf-8 -*-

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), %w[.. lib])

require "chefstyle"

if ARGV.size == 1 && %w[-v --version].include?(ARGV.first)
  puts "Chefstyle #{Chefstyle::VERSION}"
  print "  * RuboCop "
end

load Gem.bin_path("rubocop", "rubocop")
